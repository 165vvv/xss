  <div id="messageBoard"></div>

  <script>
    // === åå°„å‹ XSS ===
    const params = new URLSearchParams(window.location.search);
    if (params.has('q')) {
      const keyword = params.get('q');
      // ç›´æ¥æ’å…¥ DOMï¼Œä¸åšä»»ä½•ç¼–ç ï¼ˆåå°„å‹ XSS æ¼æ´ï¼‰
      document.getElementById('searchResult').innerHTML = "æœç´¢ç»“æœï¼š<b>" + keyword + "</b>";
    }

    document.getElementById('searchForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const value = document.getElementById('searchInput').value;
      window.location.search = "?q=" + encodeURIComponent(value);
    });

    // === å­˜å‚¨å‹ XSS ===
    let messages = JSON.parse(localStorage.getItem("xss_messages") || "[]");

    function renderMessages() {
      const board = document.getElementById("messageBoard");
      board.innerHTML = "";
      messages.forEach((msg, index) => {
        const div = document.createElement("div");
        div.className = "entry";
// ç›´æ¥æ¸²æŸ“æœªè¿‡æ»¤å†…å®¹ï¼ˆå­˜å‚¨å‹ XSS æ¼æ´ï¼‰
        div.innerHTML = `
          <div class="content">${msg}</div>
          <div class="actions">
            <button onclick="editMessage(${index})">ç¼–è¾‘</button>
            <button onclick="deleteMessage(${index})">åˆ é™¤</button>
            <a href="javascript:alert('XSS')">ç‚¹æˆ‘è§¦å‘XSS</a>

          </div>
        `;
        board.appendChild(div);
      });
    }

    function saveMessages() {
      localStorage.setItem("xss_messages", JSON.stringify(messages));
    }

    document.getElementById("addForm").addEventListener("submit", function(e) {
      e.preventDefault();
      const content = document.getElementById("messageInput").value;
      messages.push(content);
      saveMessages();
      renderMessages();
      document.getElementById("messageInput").value = "";
    });

    window.deleteMessage = function(index) {
      if (confirm("ç¡®å®šåˆ é™¤è¿™æ¡ç•™è¨€å—ï¼Ÿ")) {
        messages.splice(index, 1);
        saveMessages();
        renderMessages();
      }
   };

    window.editMessage = function(index) {
      const newContent = prompt("ä¿®æ”¹ç•™è¨€å†…å®¹ï¼š", messages[index]);
      if (newContent !== null) {
        messages[index] = newContent;
        saveMessages();
        renderMessages();
      }
    };

    // åˆå§‹åŒ–æ¸²æŸ“
    renderMessages();
  </script>
